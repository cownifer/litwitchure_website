.introduction
    w-full()
    padding-bottom $sp--times-two

    &__inner
        display flex
        flex-direction column
        +above(740px)
            flex-direction row
            align-items center
        justify-content space-between
        gap $sp--times-two
        contain()

    &__image
        flex 0 0 auto
        display flex
        align-items center
        justify-content center

        img
            max-height 22rem
            box-shadow 0 4px $sp--quarter hsl(229.4, 51.5%, 6.5%)
            border-radius 8px

    &__text
        flex 1 1 auto

        a
            content-anchor()
